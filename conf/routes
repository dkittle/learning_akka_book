# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /reverse/:s                 controllers.Application.reverseString(s: String)
GET     /reverse-all                controllers.Application.reverseAll(phrase: Seq[String])

POST    /contents/url               controllers.Application.content
POST    /content/url                controllers.Application.retrieveContent
GET     /contents                   controllers.Application.retrieveUrls

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
